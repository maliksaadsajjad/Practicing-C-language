#include<stdio.h>
#include<conio.h>
main()
{
 int a;
 printf("Enter a number: \n");
 scanf("%d",&a);
 if(a==0)
 printf("The given number is neither positive nor negative.");
 else
 {
  if(a>0)
  printf("The given number is a positive number.");
  else
  printf("The given number is a negative number.");
 }
 getch();
}
